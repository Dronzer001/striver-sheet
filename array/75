class Solution {
public:
    void sortColors(vector<int>& nums) {
        int n=nums.size();
        int start=0,i=0,end=n-1;
        while(i<=end){
            if(nums[i]==0){
                swap(nums[i],nums[start]);
                start+=1;
                i+=1;
            }
            else if(nums[i]==2){
                swap(nums[i],nums[end]);
                end-=1;
            }
            else i+=1;
        }
    }
};

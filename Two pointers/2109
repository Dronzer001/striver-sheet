class Solution {
public:
    string addSpaces(string s, vector<int>& spaces) {
        int m=spaces.size();
        string str="";
        sort(spaces.begin(),spaces.end());
        int start=0;
        for(int i=0;i<m;i+=1){
            str+=s.substr(start,spaces[i]-start);
            if(i!=m-1) str+=" ";
            start=spaces[i];
        }
        if(start!=s.length()) str+=" "+s.substr(start);
        return str;
    }
};
